{
  "name": "chat-server",
  "version": "1.0.0",
  "description": "Simple chat server",
  "author": "Jurgis Rudaks",
  "repository": {
    "type": "git",
    "url": "https://github.com/jurgisrudaks/chat-server.git"
  },
  "scripts": {
    "start": "npm run serve",
    "serve": "node dist/server.js",
    "build": "npm run build-ts",
    "build-ts": "tsc",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --fix",
    "dev": "npm run build && npm run dev-watch",
    "dev-serve": "nodemon --inspect dist/server.js",
    "dev-watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run dev-serve\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "ci-test": "jest --forceExit --coverage --ci",
    "ci-lint": "tsc --noEmit && eslint \"**/*.{js,ts}\""
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/concurrently": "^5.2.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.5",
    "@types/socket.io": "^2.1.4",
    "@types/supertest": "^2.0.9",
    "@types/uuid": "^7.0.3",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "chai": "^4.2.0",
    "concurrently": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^25.5.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "socket.io": "^2.3.0",
    "uuid": "^8.0.0",
    "winston": "^3.2.1"
  }
}
